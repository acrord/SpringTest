<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="com.testSpringPjt.myapp.Post.dao.PostDao">
	
	<!-- 데이터 삽입 -->
	<insert id = "writePost">
		INSERT INTO post(Post_ID, User_ID, Created, Updated, Public, Title, Read_Cnt, Content) 
					VALUES(#{post_ID}, #{user_ID}, #{created}, #{updated}, #{public}, #{title}, #{read_Cnt}, #{content})
	</insert>
	
	<insert id = "writePost_withPW">
		INSERT INTO post 
					VALUES(#{post_ID}, #{user_ID}, #{created}, #{updated}, #{public}, #{title}, #{post_PW}, #{read_Cnt}, #{content})
	</insert>
	
	<!-- 데이터 검색 -->
	<select id = "getList" resultType="postvo">
		SELECT * FROM post
	</select>
	
</mapper>